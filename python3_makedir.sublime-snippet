# make a dir
import pathlib
pathlib.Path(tgt).mkdir()
pathlib.Path(tgt).mkdir(parents=True) # same as: mkdir -p

#remove a dir recursively
import shutil
shutil.rmtree(tgt)

import pathlib
pathlib.Path(tgt).rmdir()

